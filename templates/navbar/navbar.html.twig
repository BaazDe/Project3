{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('nav') }}
        {{ parent('app') }}
    {% endblock %}
{% block body %}
    <header class="closed">
        <div class="main-menu">
            {% if app.user %}
                <div id="logout-button">
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
                {# TODO Add links for FAQ, CGU, Mentions légales #}
            {% endif %}
            <ul>
                <li><a href="#"><img src="{{ asset("build/images/icons-calendar.svg")}}"  alt="Calendar">Agenda</a></li>
                <li><a href="#"><img src="{{ asset("build/images/icons8-running-100.png")}}" alt="running picture">Club</a></li>
                <li><a href="#"><img src="{{ asset("build/images/icons-add.png")}}" alt="event calendar">Evénements</a></li>
                <li><a href="#"><img src="{{ asset("build/images/icons-mail.png")}}" alt="mail">Chat</a></li>
                <li><a href="#"><img src="{{asset("build/images/icons-user.png")}}" alt="user profil">Profil</a></li>
            </ul>
            <div id="more-button">
                <a href="#">...<br>Plus</a>
            </div>
        </div>
        <div class="green-bottom-nav">
            <img src="{{ asset("build/images/icons8-running-100.png")}}" alt="running picture">
            <img id="arrow-swipe" src="{{ asset("build/images/arrow-up.svg")}}" alt="arrow">
            {# Nav bar effect#}
            <div class="yellow-bottom-nav">
                <p> Running club</p>
            </div>
        </div>
    </header>
    {% block javascripts %}
        {{ encore_entry_script_tags('nav') }}
        {{ parent('app') }}
    {% endblock %}
{% endblock %}
